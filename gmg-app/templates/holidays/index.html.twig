{% extends 'base.html.twig' %}

{% block title %}Holidays index{% endblock %}

{% block body %}
    <h1>Holidays index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for holiday in holidays %}
            <tr>
                <td>{{ holiday.id }}</td>
                <td>{{ holiday.date ? holiday.date|date('Y-m-d') : '' }}</td>
                <td>{{ holiday.title }}</td>
                <td>
                    <a href="{{ path('holidays_show', {'id': holiday.id}) }}">show</a>
                    <a href="{{ path('holidays_edit', {'id': holiday.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('holidays_new') }}">Create new</a>
{% endblock %}
