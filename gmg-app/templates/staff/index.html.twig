{% extends 'base.html.twig' %}

{% block title %}Staff index{% endblock %}

{% block body %}
    <h1>Staff index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gender</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Photo</th>
                <th>DOB</th>
                <th>Nationality</th>
                <th>Extension</th>
                <th>Tel1</th>
                <th>Tel2</th>
                <th>Email</th>
                <th>Pemail</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for staff in staff %}
            <tr>
                <td>{{ staff.id }}</td>
                <td>{{ staff.gender }}</td>
                <td>{{ staff.firstname }}</td>
                <td>{{ staff.lastname }}</td>
                <td>{{ staff.photo }}</td>
                <td>{{ staff.DOB }}</td>
                <td>{{ staff.nationality }}</td>
                <td>{{ staff.extension }}</td>
                <td>{{ staff.tel1 }}</td>
                <td>{{ staff.tel2 }}</td>
                <td>{{ staff.email }}</td>
                <td>{{ staff.pemail }}</td>
                <td>{{ staff.title }}</td>
                <td>
                    <a href="{{ path('staff_show', {'id': staff.id}) }}">show</a>
                    <a href="{{ path('staff_edit', {'id': staff.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
