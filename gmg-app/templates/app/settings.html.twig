{% extends 'base.html.twig' %}

{% block title %}GMG{% endblock %}

{% block body %}
<!--begin::Wrapper-->
<div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
    <!--begin::Header-->
    {% block header %}
    {{parent()}}
    {% endblock %}
    <!--end::Header-->

    {% block content %}
    <!--begin::Content-->
    <div class="content  d-flex flex-column flex-column-fluid" id="kt_content">

        <div class="subheader py-3 py-lg-8  subheader-transparent " id="kt_subheader">
            <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                <!--begin::Info-->
                <div class="d-flex align-items-center flex-wrap mr-1">

                    <!--begin::Page Heading-->
                    <div class="d-flex align-items-baseline flex-wrap mr-5">
                        <!--begin::Page Title-->
                        <h2 class="subheader-title text-dark font-weight-bold my-1 mr-3">

                        </h2>
                        <!--end::Page Title-->

                        <!--begin::Breadcrumb-->
                        <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold my-2 p-0">
                            {{asprega_breadcrumb()}}
                        </ul>
                        <!--end::Breadcrumb-->
                    </div>
                    <!--end::Page Heading-->
                </div>
                <!--end::Info-->

                <!--begin::Toolbar-->
                <div class="d-flex align-items-center">

                </div>
                <!--end::Toolbar-->
            </div>
        </div>








        <div class="d-flex flex-column-fluid">
            <!--begin::Container-->
            <div class=" container ">
                


                <div class="row">


                    <div class="col-xl-8">
                        <!--begin::Stats Widget 2-->
                        <div class="card card-custom bgi-no-repeat card-stretch gutter-b"
                            style="background-position: right top; background-size: 30% auto; background-image: url(/assets/media/svg/shapes/abstract-3.svg)">
                            <!--begin::Body-->
                            <div class="card-body">
                                <a href="#"
                                    class="card-title font-weight-bold text-muted text-hover-primary font-size-h5">Holidays</a>

                                <div class="form my-2">
                                    {{ form_start(form) }}
                                        <div class="row">
                                            <div class="col-sm-4">
                                                {{ form_label(form.country) }}
                                                {{ form_widget(form.country) }}
                                            </div>
                                            <div class="col-sm-4">
                                                {{ form_label(form.title) }}
                                                {{ form_widget(form.title) }}
                                            </div>
                                            
                                            <div class="col-sm-4">
                                                {{ form_label(form.date) }}
                                                {{ form_widget(form.date) }}
                                            </div>
                                            
                                        </div>
                                    {{ form_end(form) }}

                                </div>

                                <!--view-->
                                <div class="datatable datatable-default datatable-bordered datatable-loaded">
                                    <table class="datatable-bordered datatable-head-custom datatable-table"
                                        id="kt_datatable_holidays" style="display: block;">
                                        <thead class="datatable-head">
                                            <tr >
                                                <th>#</th>
                                                <th >Date</th>
                                                <th>Title</th>
                                                <th >Country</th>
                                                
                                                
                                                <th >Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody style="" class="datatable-body">
                                            {% for item in holidays %}
                                            <tr >
                                                <td >
                                                    <span >{{loop.index}}</span>
                                                </td>
                                                <td ><span >{{ item.date | date("m/d/Y") }}</span></td>
                                                <td ><span >{{item.title}}</span> </td>
                                                <td ><span >{{item.country}}</span> </td>
                                                
                                                
                                                
                                                
                                                <td >
                                                    <span class="">

                                                 
                                                        <button class="btn" data-toggle="modal" data-target="#modal-{{item.id}}"><span
                                                            class="svg-icon svg-icon-md svg-icon-primary">
                                                            <!--begin::Svg Icon | path:assets/media/svg/icons/General/Trash.svg--><svg
                                                                xmlns="http://www.w3.org/2000/svg"
                                                                xmlns:xlink="http://www.w3.org/1999/xlink" width="24px"
                                                                height="24px" viewBox="0 0 24 24" version="1.1">
                                                                <g stroke="none" stroke-width="1" fill="none"
                                                                    fill-rule="evenodd">
                                                                    <rect x="0" y="0" width="24" height="24"></rect>
                                                                    <path
                                                                        d="M6,8 L6,20.5 C6,21.3284271 6.67157288,22 7.5,22 L16.5,22 C17.3284271,22 18,21.3284271 18,20.5 L18,8 L6,8 Z"
                                                                        fill="#000000" fill-rule="nonzero"></path>
                                                                    <path
                                                                        d="M14,4.5 L14,4 C14,3.44771525 13.5522847,3 13,3 L11,3 C10.4477153,3 10,3.44771525 10,4 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z"
                                                                        fill="#000000" opacity="0.3"></path>
                                                                </g>
                                                            </svg>
                                                            <!--end::Svg Icon-->
                                                        </span> </button>
        
        
        
        
                                                        <div class="modal fade"  id="modal-{{item.id}}" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true" >
                                                            <div class="modal-dialog " role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="modal-label-{{item.id}}">Wait !</h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: black;">
                                                                            <span style="display: block;" aria-hidden="true" class="fas fa-times"></span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body" style="color: black;">
                                                                        <div data-scroll="true" >
                                                                            <p class="my-5" style="text-align: left; text-align: center;">
                                                                                <span class="fas fa-question question-marq-modal"></span>
                                                                                Do you really wanna delete this item ?
                                                                            </p>
                                                                        <div>
                                                                    </div>
                                                                    <div class="modal-footer" >
                                                                        <button type="button" class="btn btn-secondary font-weight-bold" data-dismiss="modal">Cancel</button>
                                                                            
                                                                        <form method="post" action="{{ path('holiday_delete_route', {'id': item.id,'lng':lngbase}) }}" >
                                                                        <input type="hidden" name="_method" value="DELETE">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                                                            
                                                                            <button type="submit" class="btn btn-primary font-weight-bold">Delete</button>
                                                                        </form>
                    
                                                                        
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
        
                                                    </span>
                                                </td>
                                            </tr>
                                            {% endfor %}

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                            <!--end::Body-->
                        </div>
                        <!--end::Stats Widget 2-->
                    </div>
                    <div class="col-xl-4">
                        <div class="row">
                            <div class="col-xl-12">
                                <!--begin::Stats Widget 1-->
                                <div class="card card-custom bgi-no-repeat card-stretch gutter-b"
                                    style="background-position: right top; background-size: 30% auto; background-image: url(/assets/media/svg/shapes/abstract-4.svg)">
                                    <!--begin::Body-->
                                    <div class="card-header border-0 pt-5">
                                        <div class="card-title">
                                            <div class="card-label">
                                                <div class="font-weight-bolder">Maximum numbers of phones</div>
                                            </div>
                                        </div>
                                        <div class="card-toolbar">
                                            <div class="dropdown dropdown-inline">
                                                <div class="btn btn-clean btn-sm btn-icon phone-toogler" aria-haspopup="true" 
                                                    aria-expanded="false">
                                                    <i class="fas fa-wrench"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="flex-grow-1">
                                            <div class="font-weight-bolder font-size-h3">{{setting.nbrTelMax}} phone(s)</div>
                                        </div>
        
        
                                        <div class="phone-form-update" style="display: none;">
                                            <form action="" method="POST">
                                                <input type="hidden" name="phoneupdate" value="update">
                                                <div class="form-group row">
                                                    <div class="col-12">
                                                        <div class="input-group bootstrap-touchspin bootstrap-touchspin-injected">
                                                            <input id="kt_touchspin_4" type="number" class="form-control" value="{{setting.nbrTelMax}}"
                                                                name="maxTelNbr" placeholder="Select time" style="text-align: center;" required>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-12">
                                                        <button class="btn btn-primary" type="submit">Update</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
        
        
                                    </div>
                                    <!--end::Body-->
                                </div>
                                <!--end::Stats Widget 1-->
                            </div>
                            
                            <div class="col-xl-12">
                                <!--begin::Stats Widget 1-->
                                <div class="card card-custom bgi-no-repeat card-stretch gutter-b"
                                    style="background-position: right top; background-size: 30% auto; background-image: url(/assets/media/svg/shapes/abstract-5.svg)">
                                    <!--begin::Body-->
                                    <div class="card-header border-0 pt-5">
                                        <div class="card-title">
                                            <div class="card-label">
                                                <div class="font-weight-bolder">Day start week</div>
                                            </div>
                                        </div>
                                        <div class="card-toolbar">
                                            <div class="dropdown dropdown-inline">
                                                <div class="btn btn-clean btn-sm btn-icon day-toogler" aria-haspopup="true" 
                                                    aria-expanded="false">
                                                    <i class="fas fa-wrench"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="flex-grow-1">
                                            <div class="font-weight-bolder font-size-h3">{{setting.dayStartWeek}}</div>
                                        </div>
        
        
                                        <div class="day-form-update" style="display: none;" >
                                            <form action="" method="POST">
                                                <input type="hidden" name="dayStartWeekUpdate" value="update">
                                                <div class="form-group row">
                                                    <div class="col-12">
                                                        <div class="input-group bootstrap-touchspin bootstrap-touchspin-injected">
                                                            <select  type="number" class="form-control" value="{{setting.dayStartWeek}}" name="dayStartWeek" placeholder="Monday / Sunday" style="text-align: center;" required>
                                                                <option {% if setting.dayStartWeek =='Monday' %} selected {% endif %} value="Monday">Monday</option>
                                                                <option {% if setting.dayStartWeek =='Sunday' %} selected {% endif %} value="Sunday">Sunday</option>
                                                                
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-12">
                                                        <button class="btn btn-primary" type="submit">Update</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
        
        
                                    </div>
                                    <!--end::Body-->
                                </div>
                                <!--end::Stats Widget 1-->
                            </div>


                            <div class="col-xl-12">
                                <!--begin::Stats Widget 1-->
                                <div class="card card-custom bgi-no-repeat card-stretch gutter-b"
                                    style="background-position: right top; background-size: 30% auto; background-image: url(/assets/media/svg/shapes/abstract-2.svg)">
                                    <!--begin::Body-->
                                    <div class="card-header border-0 pt-5">
                                        <div class="card-title">
                                            <div class="card-label">
                                                <div class="font-weight-bolder">Periodicity</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form class="form" action="" method="POST">
                                                <input type="hidden" name="periodicityUpdate" value="update" id="">
                                                <div class="form-group row">
                                                    <label class="col-sm-12">Periodicity</label>
                                                    <div class="col-sm-12">
                                                        <input id="kt_tagify_1" class="form-control tagify" name='tags' placeholder='type...' value="{{setting.periodicity |join(', ') }}"  />
        
                                                        <div class="mt-3">
                                                            <button class="btn btn-primary">Update</button>
                                                        </div>
        
                                                    </div>
                                                </div>
                                            </form>
        
        
                                        
        
        
                                    </div>
                                    <!--end::Body-->
                                </div>
                                <!--end::Stats Widget 1-->
                            </div>
                            

                        </div>
                    </div>
                </div>



            </div>

        </div>












    </div>
    <!--end::Content-->
    {% endblock %}


    <!--begin::Footer-->
    {% block footer %}
    {{parent()}}
    {% endblock %}
    <!--end::Footer-->
</div>
<!--end::Wrapper-->
{% endblock %}