{% extends 'base.html.twig' %}

{% block title %}GMG | Candidates{% endblock %}

{% block body %}
<!--begin::Wrapper-->
<div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
    <!--begin::Header-->
    {% block header %}
    {{parent()}}
    {% endblock %}
    <!--end::Header-->

    {% block content %}
    <!--begin::Content-->
    <div class="content  d-flex flex-column flex-column-fluid" id="kt_content">

        <div class="subheader py-3 py-lg-8  subheader-transparent " id="kt_subheader">
            <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                <!--begin::Info-->
                <div class="d-flex align-items-center flex-wrap mr-1">

                    <!--begin::Page Heading-->
                    <div class="d-flex align-items-baseline flex-wrap mr-5">
                        <!--begin::Page Title-->
                        <h2 class="subheader-title text-dark font-weight-bold my-1 mr-3">

                        </h2>
                        <!--end::Page Title-->

                        <!--begin::Breadcrumb-->
                        <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold my-2 p-0">
                            {{asprega_breadcrumb()}}
                        </ul>
                        <!--end::Breadcrumb-->
                    </div>
                    <!--end::Page Heading-->
                </div>
                <!--end::Info-->

                <!--begin::Toolbar-->
                <div class="d-flex align-items-center">

                </div>
                <!--end::Toolbar-->
            </div>
        </div>










        <div class="d-flex flex-column-fluid">
            <!--begin::Container-->
            <div class=" container ">
                <!--begin::Row-->
                <div class="row">

                    <!--begin table -->



                    <!--begin::Entry-->
                    <div class="d-flex flex-column-fluid">
                        <!--begin::Container-->
                        <div class=" container ">

                            <!--begin::Card-->
                            <div class="card card-custom">
                                <div class="card-header py-3">
                                    <div class="card-title">
                                        <span class="card-icon">
                                            <i class="fas fa-user-graduate text-primary"></i>
                                        
                                        </span>
                                        <h3 class="card-label">Candidates </h3>
                                    </div>
                                    <div class="card-toolbar">
                                        <!--begin::Dropdown-->
                                        
                                        <!--end::Dropdown-->

                                        <!--begin::Button -->
                                        <a href="{{ path('condidates_new',{lng:lngbase}) }}"
                                                    class="btn btn-primary font-weight-bolder font-size-sm"><i class="fas fa-plus"></i> Add new</a>
                                        <!--end::Button-->
                                    </div>
                                </div>
                                <div class="card-body">
                                    <!--begin: Search Form-->
                                    <!--begin::Search Form-->
                                    <div class="mt-2 mb-7">
                                        <div class="row align-items-center">
                                            <div class="col-lg-12 col-xl-12">
                                                <div class="row align-items-center">
                                                    <div class="col-md-3 my-2 my-md-0">
                                                        <div class="input-icon">
                                                            <input type="text" class="form-control"
                                                                placeholder="Search..."
                                                                id="kt_datatable_search_query" />
                                                            <span><i class="flaticon2-search-1 text-muted"></i></span>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3 my-2 my-md-0">
                                                        <div class="d-flex align-items-center">
                                                            <label class="mr-3 mb-0 d-none d-md-block"><strong>Skills:</strong></label>
                                                            <select class="form-control"
                                                                id="kt_datatable_search_skill">
                                                                <option value="">All</option>
                                                                {% for s in skills %}
                                                                    <option value="{{s.skill}}"> {{s.skill}} </option>
                                                                {% endfor %}
                                                                
                                                            </select>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-3 my-2 my-md-0">
                                                        <div class="d-flex align-items-center">
                                                            <label class="mr-3 mb-0 d-none d-md-block"><strong>Contract status:</strong></label>
                                                            <select class="form-control" id="kt_datatable_search_contract_status">
                                                                <option value="">All</option>
                                                                {% for s in contract_Status_Types %}
                                                                    <option value="{{s.contractStatusType}}"> {{s.ordre}}-{{s.contractStatusType}}</option>
                                                                {% endfor %}
                                                                
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3 my-2 my-md-0">
                                                        <div class="d-flex align-items-center">
                                                            <label class="mr-3 mb-0 d-none d-md-block"><strong>Equivalence Status:</strong></label>
                                                            <select class="form-control" id="kt_datatable_search_status">
                                                                <option value="">All</option>
                                                                {% for s in status_types %}
                                                                    <option value="{{s.statusType}}">{{s.ordre}}-{{s.statusType}}</option>
                                                                {% endfor %}
                                                                
                                                            </select>
                                                        </div>
                                                    </div>
                                                    



                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Search Form-->
                                    <!--end: Search Form-->

                                    <!--begin: Datatable-->
                                    <div>
                                        <table class="datatable datatable-bordered datatable-head-custom "  id="kt_datatable_condidates">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>FullName</th>
                                                    <th>Subskills</th>
                                                    <th>Affilation Date</th>
                                                    <!--<th>Tel</th>
                                                    <th>Pack</th>-->
                                                    
                                                    <th>Contract status</th>
                                                    <th>Equivalence status</th>
                                                    <th>Payment</th>
                                                    <th>Contract note</th>
                                                    <th>Equivalence note</th>
                                                    
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
     
                                               
                                                {% for c in candidates %}
                                                <tr>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                        {{loop.index}}
                                                    </td>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                        <span >
                                                            <div class="d-flex align-items-center">
                                                                <div class="symbol symbol-40 flex-shrink-0">
                                                                    <div class="symbol-label"
                                                                        style="background-image:url('{{ asset("assets/img/condidates/"~c.avatar)}}')">
                                                                    </div>
                                                                </div>
                                                                <div class="ml-2">
                                                                    <div
                                                                        class="text-dark-75 font-weight-bold line-height-sm">
                                                                        {{c.firstname}} <span style="text-transform:uppercase">{{c.lastname}}</span></div> 
                                                                        
                                                                        <a href="#" class="font-size-sm text-dark-50 text-hover-primary">
                                                                            {% for item in c.getCandidateSkills() %}
                                                                                {{item.skill.skill }},
                                                                            {% endfor %}
                                                                        </a>
                                                                </div>
                                                            </div>
                                                        </span>
                                                    </td>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                       <ul style="padding:0;padding-left:15px">
                                                        {% for s in c.getCandidateSkills() %}
                                                           <li>{{s.skill.subSkill}}</li>
                                                        {% endfor %}
                                                       </ul>
                                                    </td>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                       {{c.affilationDate | date("d M, Y") }}
                                                    </td>
                                                    <!--<td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                       
                                                        <ul style="list-style: none;padding:0">
                                                        {% for p in c.getPhoneNumber() %}
                                                           <li>{{p.phoneNumber}}</li>
                                                        {% endfor %}
                                                       </ul>
                                                    </td>-->
                                                    <!--<td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                       {{c.getStatuses()[((c.getStatuses()|length) -1)].packType}}
                                                    </td>-->
                                                    
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                        {% if c.statusContracts | length != 0 %}
                                                        <span data-toggle="modal"  data-target="#modal-add-contract-status-{{c.id}}"  class="label label-light-success label-inline font-weight-bolder mr-1 text-center" style="    color: rgb(42 123 158); cursor: pointer;  background-color: #93d4f0;" > {{c.statusContracts[((c.statusContracts | length) -1 )].contractStatusType.contractStatusType}} </span>
                                                        {% endif %}
                                                        
                                                        
                                                    </td>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                        <span data-toggle="modal"  data-target="#modal-add-status-{{c.id}}"  class="label label-light-success label-inline font-weight-bolder mr-1 text-center" style="    color: #1BC5BD; cursor:pointer" > {{c.getStatuses()[((c.getStatuses()|length) -1)].statusType}}  </span>
                                                        
                                                        
                                                    </td>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                        {% set totalPrice = 0 %}
                                                       {% for pay in c.getCandidatesPayments() %}
                                                        {% set totalPrice = totalPrice + (pay.paymentHistory.amount) %}
                                                       {% endfor %}
                                                       {{ totalPrice|number_format(2, '.', ',') }}
                                                    </td>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                        {% if c.statusContracts | length != 0 %}
                                                            <p>{{c.statusContracts[((c.statusContracts | length) -1 )].note}} </p>
                                                        {% endif %}
                                                        
                                                        
                                                    </td>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                        <p>{{c.getStatuses()[((c.getStatuses()|length) -1)].note}}</p>  
                                                        
                                                        
                                                    </td>
                                                    <td class="text-dark-75 font-weight-bolder  font-size-lg">
                                                        <span style="overflow: visible; position: relative; width: 125px;" >
                                                            
                                                            <a href="{{ path('condidates_show',{id: c.id,lng:lngbase}) }}" class="btn btn-sm btn-clean btn-icon ">
                                                                 <span class="svg-icon svg-icon-md"> 
                                                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                                                <rect x="0" y="0" width="24" height="24"/>
                                                                                <path d="M13.2070325,4 C13.0721672,4.47683179 13,4.97998812 13,5.5 C13,8.53756612 15.4624339,11 18.5,11 C19.0200119,11 19.5231682,10.9278328 20,10.7929675 L20,17 C20,18.6568542 18.6568542,20 17,20 L7,20 C5.34314575,20 4,18.6568542 4,17 L4,7 C4,5.34314575 5.34314575,4 7,4 L13.2070325,4 Z" fill="#000000"/>
                                                                                <circle fill="#000000" opacity="0.3" cx="18.5" cy="5.5" r="2.5"/>
                                                                            </g>
                                                                        </svg>
                                                                    
                                                                    </span> 
                                                            </a>



                                                                
                                                                
                                                                <a href="javascript:;"
                                                                class="btn btn-sm btn-clean btn-icon" title="Delete"> <span
                                                                    class="svg-icon svg-icon-md"> <svg
                                                                        xmlns="http://www.w3.org/2000/svg"
                                                                        xmlns:xlink="http://www.w3.org/1999/xlink"
                                                                        width="24px" height="24px" viewBox="0 0 24 24"
                                                                        version="1.1">
                                                                        <g stroke="none" stroke-width="1" fill="none"
                                                                            fill-rule="evenodd">
                                                                            <rect x="0" y="0" width="24" height="24"></rect>
                                                                            <path
                                                                                d="M6,8 L6,20.5 C6,21.3284271 6.67157288,22 7.5,22 L16.5,22 C17.3284271,22 18,21.3284271 18,20.5 L18,8 L6,8 Z"
                                                                                fill="#000000" fill-rule="nonzero"></path>
                                                                            <path
                                                                                d="M14,4.5 L14,4 C14,3.44771525 13.5522847,3 13,3 L11,3 C10.4477153,3 10,3.44771525 10,4 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z"
                                                                                fill="#000000" opacity="0.3"></path>
                                                                        </g>
                                                                    </svg> </span> 
                                                                </a>
                                                        </span>
                                                    </td>
                                                    
                                                    
                                                </tr>


                                                <div class="modal fade" id="modal-add-status-{{c.id}}"
                                                        tabindex="-1" role="dialog" aria-labelledby="staticBackdrop"
                                                        aria-hidden="true">
                                                        <div class="modal-dialog " role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" >
                                                                        Set new Equivalence Status
                                                                    </h5>
                                                                    <button type="button" class="close"
                                                                        data-dismiss="modal" aria-label="Close"
                                                                        style="color: black;">
                                                                        <span style="display: block;" aria-hidden="true"
                                                                            class="fas fa-times"></span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body" style="color: black;">

                                                                    

                                                                    <form action="" method="POST">
                                                                        <input type="hidden" name="addNewStatus" value="{{c.id}}">
                                                                        <input type="hidden" name="idCandidate" value="{{c.id}}">
                                                                        
                                                                        <div class="form-group row">
                                                                            <label class="col-xl-3 col-lg-3 col-form-label">Status Type </label>
                                                                            <div class="col-lg-9 col-xl-9">
                                                                                <select  name="statusType" 
                                                                                    class=" form-control form-control-lg form-control-solid">
                                                                                    <option value="">Please choose a value
                                                                                    </option>
                                                                                    {% for d in status_types %}
                                                                                        {% if d.id != 0 %}
                                                                                            <option value="{{d.id}}">{{d.ordre}}-{{d.statusType}} </option>
                                                                                        {% endif %}
                                                                                    {% endfor %}
                                                                                </select>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group row">
                                                                            <label class="col-xl-3 col-lg-3 col-form-label">Note </label>
                                                                            <div class="col-lg-9 col-xl-9">
                                                                                <textarea name="note" id="" class=" form-control form-control-lg form-control-solid "  rows="3"></textarea>
                                                                                </select>
                                                                            </div>
                                                                        </div>

                                                                    <div class="modal-footer">
                                                                        <button type="button"
                                                                            class="btn btn-secondary font-weight-bold"
                                                                            data-dismiss="modal">Cancel</button>

                                                                        <button type="submit"
                                                                            class="btn btn-primary font-weight-bold">Create</button>


                                                                    </div>

                                                                    </form>


                                                                    
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>



                                                    <!--other sttaus modal-->
                                                    
                                                <div class="modal fade" id="modal-add-contract-status-{{c.id}}"
                                                tabindex="-1" role="dialog" aria-labelledby="staticBackdrop"
                                                aria-hidden="true">
                                                <div class="modal-dialog " role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" >
                                                                Set new Contract Status
                                                            </h5>
                                                            <button type="button" class="close"
                                                                data-dismiss="modal" aria-label="Close"
                                                                style="color: black;">
                                                                <span style="display: block;" aria-hidden="true"
                                                                    class="fas fa-times"></span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body" style="color: black;">

                                                            

                                                            <form action="" method="POST">
                                                                <input type="hidden" name="addNewStatusContract" value="{{c.id}}">
                                                                <input type="hidden" name="idCandidate" value="{{c.id}}">
                                                                
                                                                <div class="form-group row">
                                                                    <label class="col-xl-3 col-lg-3 col-form-label">Contract Status Type </label>
                                                                    <div class="col-lg-9 col-xl-9">
                                                                        <select  name="contractStatusType" 
                                                                            class=" form-control form-control-lg form-control-solid">
                                                                            <option value="">Please choose a value
                                                                            </option>
                                                                            {% for d in contract_Status_Types %}
                                                                                {% if d.id != 0 %}
                                                                                    <option value="{{d.id}}">{{d.ordre}}-{{d.contractStatusType}} </option>
                                                                                {% endif %}
                                                                            {% endfor %}
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group row">
                                                                    <label class="col-xl-3 col-lg-3 col-form-label">Note </label>
                                                                    <div class="col-lg-9 col-xl-9">
                                                                        <textarea name="note" id="" class=" form-control form-control-lg form-control-solid "  rows="3"></textarea>
                                                                        </select>
                                                                    </div>
                                                                </div>

                                                            <div class="modal-footer">
                                                                <button type="button"
                                                                    class="btn btn-secondary font-weight-bold"
                                                                    data-dismiss="modal">Cancel</button>

                                                                <button type="submit"
                                                                    class="btn btn-primary font-weight-bold">Create</button>


                                                            </div>

                                                            </form>


                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            
                                                
                                                {% endfor %}
                                               






                                                
                                               
    
                                           
                                            </tbody>
                                        </table>
                                    </div>

                                    <!--end datatable-->

                                </div>
                            </div>
                            <!--end::Card-->
                        </div>
                        <!--end::Container-->
                    </div>
                    <!--end::Entry-->
                    <!-- end table-->

                </div>
            </div>

        </div>

    </div>
    <!--end::Content-->
    {% endblock %}


    <!--begin::Footer-->
    {% block footer %}
    {{parent()}}
    {% endblock %}
    <!--end::Footer-->
</div>
<!--end::Wrapper-->
{% endblock %}

{% block javascripts %}

  

    <script src=" {{ asset('/assets/plugins/global/plugins.bundle.js') }} "></script>
    <script src=" {{ asset('/assets/plugins/custom/prismjs/prismjs.bundle.js') }} "></script>
    <script src=" {{ asset('/assets/js/scripts.bundle.js') }} "></script>
    
    <script src=" {{ asset('/assets/js/candidates.js') }} "></script>
    <script src=" {{ asset('/assets/js/main.js') }} "></script>
    

{% endblock %}
